<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:view="clr-namespace:OpenDnD.View"
                    xmlns:vm="clr-namespace:OpenDnD.ViewModel">

    <DataTemplate DataType="{x:Type vm:SessionsVM}" >
        <view:Sessions />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:SessionCreationVM}" >
        <view:SessionCreation />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:CharactersVM}" >
        <view:Characters />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:CharacterListVM}" >
        <view:CharacterList />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:EntitiesVM}" >
        <view:Entities />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:SessionInviterVM}" >
        <view:SessionInviter />
    </DataTemplate>

</ResourceDictionary>