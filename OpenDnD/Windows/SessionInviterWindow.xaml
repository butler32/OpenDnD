<Window x:Class="OpenDnD.Windows.SessionInviterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenDnD.Windows"
        mc:Ignorable="d"
        Title="SessionInviterWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderBrush="Black" BorderThickness="2" CornerRadius="5" Padding="5" Margin="30">
            <TextBox Text="Ник" FontSize="30" VerticalAlignment="Center" BorderBrush="Transparent"/>
        </Border>
        
        <Border Grid.Row="1" BorderBrush="Black" BorderThickness="2" CornerRadius="5" Padding="5" Margin="30">
            <ComboBox FontSize="30" VerticalAlignment="Center" >
                <ComboBoxItem Content="Игрок" FontSize="30" VerticalAlignment="Center"/>
                <ComboBoxItem Content="Мастер" FontSize="30" VerticalAlignment="Center"/>
                <ComboBoxItem Content="Наблюдатель" FontSize="30" VerticalAlignment="Center"/>
            </ComboBox>
        </Border>

        <Button Grid.Row="2" Content="Пригласить" Margin="30" FontSize="30"/>

    </Grid>
</Window>
